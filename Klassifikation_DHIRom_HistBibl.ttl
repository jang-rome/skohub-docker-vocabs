<scheme> a skos:ConceptScheme ;
    dct:title "Klassifikation DHI Rom Historische Bibliothek"@de, "Divisone del catalogo sistematico - DHI Rom Biblioteca Storica"@it ;
    dct:description "SKOS-kodierte Bearbeitung des seit 1910 verwendeten Klassifikationsschemas der Historischen Bibliothek des DHI Rom."@de, "Applicazione SKOS dello schema di classificazione utilizzato dal 1910 dalla Biblioteca storica del DHI di Roma"@it ;
    dct:creator "Jan-Peter Grünewälder", "Jonas Balzukat", "Regina Sofia Margarete Albrecht" ;
    dct:created "2024-01-11" ;
    dct:license <https://creativecommons.org/public-domain/cc0/> ;
    skos:hasTopConcept <A>, <B>, <C>, <D>, <E> .

<A> a skos:Concept ;
    skos:prefLabel "Allgemeines"@de, "In generale"@it;
    skos:definition "Nachschlagewerke mit Freihandaufstellung im Historischen Lesesaal."@de, "Collezione di materiale di consultazione con esposizione libera nella Sala di lettura storica"@it ;
    skos:example "z.B. Der grosse Ploetz : die Chronik zur Weltgeschichte / The Oxford encyclopedia of the Reformation"@de, "per esempio Der grosse Ploetz : die Chronik zur Weltgeschichte / The Oxford encyclopedia of the Reformation"@it ;
    skos:scopeNote "Standortbindung: Bei gewünschter Freihandaufstellung im Lesesaal werden auch spezifsche Nachschlagewerke hier eingeordnet. Andernfalls Fachgruppen bevorzugen."@de, "Se si desidera l'accesso aperto alla sala di lettura, anche le opere di consultazione specifiche saranno sistemate in questo reparto: Altrimenti, scegliere i gruppi tematici."@it ;
    skos:narrower <Aa>, <Ab>, <Ac>, <Ae> ;
    skos:notation "A" ;
    skos:topConceptOf <scheme> .

<Aa> a skos:Concept ;
    skos:prefLabel "Enzyklopädien, allgemeine und biographische Lexika"@de, "Enciclopedie, lessici generäli e biografici"@it ;
    skos:broader <A> ;
    skos:notation "Aa" ;
    skos:scopeNote "Sammlung von Enzyklopädien und biographischen Lexika."@de, "Collezione di enciclopedie e lessici biografici."@it ;
    skos:inScheme <scheme> .

<Ab> a skos:Concept ;
    skos:prefLabel "Bibliographien"@de, "Bibliografie"@it ;
    skos:broader <A> ;
    skos:notation "Ab" ;
    skos:scopeNote "Sammlung von Bibliographien."@de, "Raccolta di bibliografie."@it ;
    skos:inScheme <scheme> .

<Ac> a skos:Concept ;
    skos:prefLabel "Vermischte Schriften, Serienwerke etc."@de, "Miscellanea, serie ecc."@it ;
    skos:broader <A> ;
    skos:notation "Ac" ;
    skos:scopeNote "Beinhaltet verschiedene Schriften und Serienwerke."@de, "Include una varietà di scritti e serie."@it ;
    skos:inScheme <scheme> .

<Ae> a skos:Concept ;
    skos:prefLabel "Festschriften"@de, "Festschriften (scritti in onore di...)"@it ;
    skos:broader <A> ;
    skos:notation "Ae" ;
    skos:scopeNote "Enthält Sammlungen von Festschriften."@de, "Contiene collezioni di scritti in onore."@it ;
